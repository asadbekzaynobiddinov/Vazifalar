generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRoles {
  user
  admin
}

model User {
  id       Int       @id @default(autoincrement())
  fullname String
  email    String    @unique
  phone    String
  password String
  role     UserRoles @default(user)
  orders  Order[]
}

model Product {
  id       Int    @id @default(autoincrement())
  name     String
  price    Float
  info     String
  quantity Int

  orders   Order[]
}


model OrderProduct {
  id        Int @id @default(autoincrement())
  order_id  Int
  product_id Int
}


model Order {
  id          Int    @id @default(autoincrement())
  product_id  Int
  user_id     Int
  total_price Float
  status      Boolean @default(false)

  product     Product @relation(fields: [product_id], references: [id])
  user        User    @relation(fields: [user_id], references: [id])
}
